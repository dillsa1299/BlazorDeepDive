<div data-name="@server.Name"
    data-status="Server is @(server.IsOnline?"online":"offline")"
    style="@($"color:{(server.IsOnline?"green":"red")}")">
    @server.Name in @server.City is @(server.IsOnline ? "online" : "offline")
</div>

@code {
    private Server server = new Server { Name = "Server 1", City = "Newcastle" };
}

